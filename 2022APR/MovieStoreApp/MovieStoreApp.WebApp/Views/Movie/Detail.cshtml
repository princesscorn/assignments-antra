@model MovieModel

<div class = "container">
    <div class = "row">
        <div class = "col-8">
            <img src = "@Model.PosterUrl" class = "img-thumbnail" />
        </div>
        <div class = "col-4">
            <table>
                <tr>
                    <td>Title</td>
                    <td>@Model.Title</td>
                </tr>
                <tr>
                    <td>Director</td>
                    <td>@Model.Director</td>
                </tr>
                <tr>
                    <td>Description</td>
                    <td>@Model.Description</td>
                </tr>
            </table>
        </div>
    </div>
</div>