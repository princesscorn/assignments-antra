@model MovieResponseModel;

<div class = "col-4 mb-4">
    <div class="card" style="width: 18rem;">
        <img class="card-img-top" src="@Model.PosterUrl" alt="Card image cap">
        <div class="card-body">
            <h5 class="card-title">@Model.Title</h5>
            <p class="card-text">@Model.Overview</p>
            <a target = "_blank" asp-controller = "movie" asp-action = "detail" asp-route-movieId = "@Model.Id" class="btn btn-primary">Show Details</a>
        </div>
    </div>
</div>