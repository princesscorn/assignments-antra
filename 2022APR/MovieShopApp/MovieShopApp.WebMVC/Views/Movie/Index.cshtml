@model IEnumerable<MovieResponseModel>;

@await Component.InvokeAsync("AllMovies")   @* "AllMovies" must match the component name *@

@*<hr />*@                                  @*-----------------------------------------*@

@{
    PaginationModel pager = new PaginationModel();
    int pageNo = 0;
    if(ViewBag.Pager != null)
    {
        pager = ViewBag.Pager;
        pageNo = pager.CurrentPage;
    }
}

<div class="row">
    @foreach (var m in Model)
    {
       <partial name="_MovieCard" model="@m"></partial>
    }
</div>


<partial name="_Pagination" model="@pager"></partial>

